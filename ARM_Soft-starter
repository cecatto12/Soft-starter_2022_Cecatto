void HAL_TIM_PeriodElapsedCallback(TIM_HandleTypeDef *htim)
{
	R_S=10000/(c*10);
	R_D=10000/(d*10);
	//é quando sobre por segundo do ciclo	 //o vezes cem é pra ter mudanças o suficiente para ser em ms e durar o tempo necessário xalom.
	//R_D=100/(tempod*10);

	if(htim-> Instance == TIM10)

		{
		LUZ++;
		/*
		k++;
		if (l<=c && EMER==3)
		{
		if (k==100)
		{
			l++;
			HAL_UART_Transmit(&huart2, l , 2, 50);
			debugPrint(&huart2, "\r\n");
			k=0;

		}
		k=0;
		}*/
		  if(EMER==3){

		    if(ciclos>=R_S){
			ciclos=ciclos-R_S;
			// a cada 10 ms o ciclo irá abaixar (para aumentar a potencia do motor)
			// 50-3.6(modificações por cada 10ms)
			// 5-36(modificações por 10ms)
			if(ciclos<R_S){
				ciclos=0;
				//acelerando=0;
			}
		}
	 }
		  if(EMER==4){
			    if(ciclos<=(10000-R_D)){
				ciclos=ciclos+R_D;
				if(ciclos>(10000-R_D)){
					//desacelerando=0;
					ciclos=10000;
				}
		  }
		  }


		  if (ciclos==0)
		  {
		  	HAL_GPIO_WritePin(BYPASS_GPIO_Port, BYPASS_Pin, 1);
		  	AUX_AC=1;
		  }


		  if (LUZ>=5)
		  {
			  ciclos=10000;
			  EMER=0;

		  }
		  if (EMER==4)
		  {
		  	HAL_GPIO_WritePin(BYPASS_GPIO_Port, BYPASS_Pin, 0);
		  }

}
}








